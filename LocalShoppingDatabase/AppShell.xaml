<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalShoppingDatabase.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LocalShoppingDatabase.Models"
    Shell.FlyoutBehavior="Disabled"
    Title="LocalShoppingDatabase">


    <TabBar>

        <Tab Title="Me">

            <ShellContent ContentTemplate="{DataTemplate local:Profile}" Route="Profile"/>


        </Tab>


        <Tab Title="Items">

            <ShellContent ContentTemplate="{DataTemplate local:ShoppingList}" Route="Models.ShoppingList"/>


        </Tab>


        <Tab Title="Checkout">

            <ShellContent ContentTemplate="{DataTemplate local:Cart}" Route="Models.Cart"/>


        </Tab>

    </TabBar>
</Shell>

